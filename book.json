{
    "root": "./docs",
    "title": "title of gitbook",
    "description": "description of gitbook",
    "author": "author name",
    "language": "zh-hans",
    "gitbook": ">=3.0.0",

    "links" : {
        "sidebar" : {
            "Home" : "https://github.com/dunwu/gitbook-notes"
        }
    },

    "plugins": [
        "anchor-navigation-ex",
        "back-to-top-button",
        "chapter-fold",
        "code",
        "expandable-chapters",
        "hide-element",
        "highlight",
        "livereload",
        "page-treeview",
        "splitter",
        "-lunr",
        "-search",
        "search-pro",
        "tags",
        "theme-comscore"
    ],

    "pluginsConfig": {
        "anchor-navigation-ex": {
            "showLevel": false,
            "showGoTop": false
        },
        "theme-default": {
            "showLevel": false
        },
        "hide-element": {
            "elements": [".gitbook-link", ".treeview__container-title"]
        }
    },

    "styles": {
        "website": "styles/website.css"
    }
}